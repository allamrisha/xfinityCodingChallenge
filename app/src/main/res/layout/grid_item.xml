<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_ten"
    android:layout_marginRight="@dimen/dimen_ten"
    android:background="@drawable/image_background">

    <LinearLayout
        android:layout_width="@dimen/dimen_grid_linear_layout"
        android:layout_height="@dimen/dimen_grid_linear_layout"
        android:background="@drawable/image_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_simpsons_list"
            android:layout_width="@dimen/dimen_grid_image_view"
            android:layout_height="@dimen/dimen_grid_image_view"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_title"
            style="@style/TitletxtStyle"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title"
            android:padding="@dimen/padding_in_view"
            android:layout_gravity="center"
            android:textColor="@color/primaryTextColor" />
    </LinearLayout>
</RelativeLayout>