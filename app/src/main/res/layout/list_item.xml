<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_ten"
    android:orientation="horizontal"
    android:weightSum="2"
    android:padding="@dimen/dimen_ten"
    android:background="@drawable/image_background">


    <ImageView
        android:id="@+id/image_simpsons_list"
        android:layout_width="@dimen/dimen_grid_image_view"
        android:layout_height="@dimen/dimen_grid_image_view"
        android:background="@drawable/image_background"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight=".5"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_ten"
        android:textColor="@color/primaryTextColor"
        android:gravity="center_vertical"
        android:text="@string/text_title"
        android:layout_weight="1.5"
        android:layout_gravity="center_vertical"
        style="@style/TitletxtStyle"
        />

</LinearLayout>